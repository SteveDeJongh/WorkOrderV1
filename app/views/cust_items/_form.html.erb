  </div>
  <div class="col-md-6">
    <%= form.label 'Model', class:"form-label" %>
    <%= form.text_field :model, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= form.label "Color", class:"form-label" %>
    <%= form.text_field :color, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= form.label "Size", class:"form-label" %>
    <%= form.text_field :size, class:"form-control" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-primary"%>
    <%= link_to "Cancel", customer_path(params[:cust]), class: "btn btn-primary"%>
  </div>
<% end %>

<p style="color: green"><%= notice %></p>

<h1>Customers</h1>

<a href="<%= new_customer_path %>"><button type="button" class="btn btn-primary">New Customer</button></a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">City</th>
    </tr>
  </thead>
  <tbody>
      <% @customers.each do |customer| %>
        <%= render customer %>
      <% end %>
  </tbody>
</table>
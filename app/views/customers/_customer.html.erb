<h4>Name</h4>
<h6>First</h6>
<p><%= customer.firstName %></p>
<h6>Last</h6>
<p><%= customer.lastName %></p>
<h4>Contact Info</h4>
<h6>Email</h6>
<p><%= customer.email %></p>
<h6>Phone</h6>
<p><%= customer.phone %></p>
<h4>Address</h4>
<p>Address</p>
<%= customer.address %>
<p>City</p>
<%= customer.city %>
<p>Province</p>
<%= customer.province %>
<p>Postal Code</p>
<%= customer.postal %>
<p>Country</p>
<%= customer.country %>

<div class="actions">
  <%= link_to "Edit #{@customer.firstName} #{@customer.lastName}", edit_customer_path(@customer), class:"btn btn-primary"%>
  <%= link_to "Delete customer", @customer, method: :delete, class:"btn btn-danger" %>
</div>
<form>
  <h4>Name</h4>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">First Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.firstName %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Last Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.lastName %>" readonly>
    </div>
  </div>
  <h4>Contact Info</h4>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.email %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Phone</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.phone %>" readonly>
    </div>
  </div>
  <h4>Address</h4>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Address</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.address %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">City</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.city %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Province</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.province %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Postal Code</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.postal %>" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="colFormLabelMd" class="col-sm-2 col-form-label col-form-label-md">Country</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext form-control-md" id="colFormLabelMd" placeholder="<%= customer.country %>" readonly>
    </div>
  </div>
</form>

<div class="actions">
  <%= link_to "Edit #{@customer.firstName} #{@customer.lastName}", edit_customer_path(@customer), class:"btn btn-primary"%>
  <%= link_to "Delete customer", @customer, method: :delete, class:"btn btn-danger" %>
</div>
<tr onclick="window.location='<%=product_path(product)%>'">
  <td><%= product.id %></td>
  <td style="white-space: nowrap"><%= product.name %></td>
  <td><%= product.sku %></td>
  <td><%= product.upc %></td>
  <td><%= number_to_currency(product.price) %></td>
  <td><%= number_to_currency(product.cost) %></td>
  <% if product.stock %>
    <td><%= product.stock %></td>
  <% else %>
    <td>0</td>
  <% end %>
  <td><%= product.min %></td>
  <td><%= product.max %></td>
  <% if product.inventory %>
    <td>✔️</td>
  <% else %>
    <td>✖️</td>
  <% end %>
</tr>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Customer</th>
      <th scope="col">Item</th>
      <th scope="col">Status</th>
      <th scope="col">Created</th>
      <th scope="col">Last Changed</th>
      <th scope="col">Created by</th>
    </tr>
  </thead>
  <tbody>
    <% @workorders.each do |wo| %>
      <tr onclick="window.location='<%= workorder_path(wo)%>'">
        <td><%= link_to wo.id, workorder_path(wo.id) %></td>
        <td><%= wo.customerName %></td>
        <td><%= wo.itemDesc %></td>
        <td><%= wo.status %></td>
        <td><%= wo.created_at.to_formatted_s(:long) %></td>
        <td><%= wo.updated_at.to_formatted_s(:nice) %></td>
        <td><%= wo.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>